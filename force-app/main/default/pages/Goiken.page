<apex:page showHeader="false" standardStylesheets="false" docType="html-5.0">
<head>
    <META HTTP-EQUIV="Content-type" CONTENT="text/html; charset=UTF-8"/>
    <!-- Import the Design System style sheet -->
    <apex:slds />
    <apex:includeScript value="{!URLFOR($Resource.otherResource, 'otherResource/js/jquery.min.js')}"/>
</head>
<style type = "text/css">
    .section{
        padding: 5em 2% 3em;
        box-sizing: border-box;
    }
    .title {
        font-size: 3.3rem;
        letter-spacing: 4px;
        text-align: center;
        box-sizing: border-box;
    }
    .inner {
        background: #FFF;
        max-width: 960px;
        box-shadow: 0 0 10px rgb(0 0 0 / 30%);
        margin: 40px auto;
        padding: 50px;
    }
    .subjectBox{
        display: flex;
        flex-wrap: wrap;
        width: 100%;
        font-size: 1.6rem;
    }
    .subjectName {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
        box-sizing: border-box;
        width: 200px;
        text-align: center;
        background: #6781a0;
        color: #FFF;
        letter-spacing: 6px;
        padding: 30px;
        float:left;
    }
    .subject {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        padding: 30px;
        box-sizing: border-box;
        background: #f6f6f6;
        width: calc(100% - 200px);
        position: relative;
        border: none;
    }
    .iken {
        position: relative;
        background: #f6f6f6;
        margin-top: 20px;
        padding: 40px;
        margin-bottom: 30px;
    }
    .ikenMoji {
        color: #6781a0;
        letter-spacing: 1px;
        width: 100%;
        font-size: 2rem;
        margin: 5px 0 10px;
    }
    .ikenBox {
        width: 100%;
        border: none;
        box-sizing: border-box;
        height: 300px;
        font-size: 1.6rem;
        box-shadow: 0 0 10px rgb(0 0 0 / 20%);
        padding: 16px;
        border-radius: 4px;
    }
    input[type=radio]{
        display: none;
    }
    .mienai {
    visibility:collapse;
    }
    .stars span{
        display: flex;               /* 要素をフレックスボックスにする */
        flex-direction: row-reverse; /* 星を逆順に並べる */
        justify-content: flex-end;   /* 逆順なので、左寄せにする */
    }
    .stars input[type='radio']{
        display: none;               /* デフォルトのラジオボタンを非表示にする */
    }
    .stars label{
        color: #D2D2D2;              /* 未選択の星をグレー色に指定 */
        font-size: 30px;             /* 星の大きさを30pxに指定 */
        padding: 0 5px;              /* 左右の余白を5pxに指定 */
        cursor: pointer;             /* カーソルが上に乗ったときに指の形にする */
    }
    .stars label:hover,
    .stars label:hover ~ label,
    .stars input[type='radio']:checked ~ label{
        color: #f8a201;              /* 選択された星以降をすべて黄色にする */
    }
    .btn-group{
        margin-top:2%;
        display: flex;
        justify-content: center;
    }
</style>
<body>
    <section id = "section">
    <div class="inner">
    <form action="https://d5h000003kbkoeay--dev.my.salesforce.com/servlet/servlet.WebToCase?encoding=UTF-8" method="POST">
        <input type="hidden" id="orgid" name="orgid" value="00D0l0000002nFr" />
        <input type="hidden" name="retURL" value="https://dev-trans-cosmos-digital.cs58.force.com/s/goikencomplete" />
        
            <div class = 'title'>サイト改善のご提案</div>
                <div class="subjectbox">
                    <label class="subjectName" for="subject">件名</label>
                    <div class="subject"><input id="subject" name="subject" type="text" required="true"  /></div>
                    <div id="output"></div>
                </div>
                <div class="iken">
                    <div>ご意見:</div>
                    <div class="ikenbox">
                        <textarea  id="00N0l0000095wEm" name="00N0l0000095wEm" type="text" wrap="soft" required="true" />
                    </div>
                
                    <div>掲載内容の分かりやすさ:
                    <select  id="00N0l0000095wG9" name="00N0l0000095wG9" title="掲載内容の分かりやすさ" class="mienai">
                        <option value="なし">なし</option>
                        <option value="分かりづらい">分かりづらい</option>
